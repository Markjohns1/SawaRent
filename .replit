modules = ["nodejs-20", "python-3.11", "web", "bash"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Property Management System"

[[workflows.workflow]]
name = "Property Management System"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash start_all.sh"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

